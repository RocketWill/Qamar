.container {
  background-color: #f2f2f2;
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  padding: 0;
  height: 100%;
  overflow: hidden;
  box-sizing: border-box;
}

page {
  background-color: #f2f2f2;
}

.reply-person{
  color: #b3b3b3;
  font-size: 25rpx;
  padding-left: 10rpx;
  margin-right: 30rpx;
}

.updated-time{
  color: #b3b3b3;
  padding-top:15rpx;
  display:block;
  font-size: 20rpx;
}

.reply-wrap {
  width: 100%;
  background-color: #fff;
  margin-bottom: 5rpx;
  margin-top: 9rpx;
}

.reply-wrap .row-box {
  width: 100%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 24rpx 24rpx;
  border-bottom: 1rpx solid #eee;
  justify-content: space-between;
}

.reply-wrap .row-box2 {
  width: 100%;
  align-items: center;
  box-sizing: border-box;
  padding: 24rpx 24rpx;
  border-bottom: 1rpx solid #eee;
}

.reply-wrap .title, .reply-wrap .wxParse-inline{
  font-size:28rpx;
}

.reply-wrap .content {
  font-size: 28rpx;
  color: #666;
  padding-right: 30rpx;
}

.reply-file-label{
  margin-top: 20rpx;
  font-size:20rpx;
  background:#6a3906;
  width:100rpx;
  text-align:center;
  color:#fff;
  padding:5rpx;
  border-radius:8rpx;
  margin-bottom:5rpx;
}

.reply-file{
  width:200rpx;
  height: 200rpx;
  margin-top:10rpx;
}

.jiesuan-box {
  display: flex;
  justify-content: space-between;
  width: 100%;
  /* height: 100rpx; */
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: 1px solid #eee;
  background-color: #fff;
}

button {
  width: 50%;
  text-align: center;
  height: 100%;
  line-height: 100rpx;
  font-size: 32rpx;
  border-radius: 0;
  color: rgba(0, 0, 0, 0.6);
  border-color: transparent;
}

.add-img-btn {
  width: 50%;
  margin-top: -30rpx;
  background-color: #2f80ed;
  color: #fff;
  border-radius: 10rpx;
}

.to-email-validation {
  background-color: #2f80ed;
  color: #fff;
}

.jiesuan-box  .left-price {
  display: flex;
  width: 500rpx;
  justify-content: flex-end;
  line-height: 100rpx;
  padding: 0 30rpx 0 0;
  font-size: 28rpx;
  box-sizing: border-box;
}

.jiesuan-box .total {
  color: #2f80ed;
  text-align: right;
}

textarea {
  height: auto;
}

.maxnum-label {
  margin: 0;
  font-size: 24rpx;
  text-align: center;
  color: rgba(0, 0, 0, 0.4);
  padding-top: 15rpx;
}

.clear-btn image {
  width: 30rpx;
  height: 30rpx;
  padding-top: 17rpx;
  padding-left: 15rpx;
}

.niming {
  display: flex;
  justify-content: flex-end;
  width: 100%;
  position: fixed;
  bottom: 100rpx;
  left: 0;
  border-top: 1px solid #eee;
  background-color: #f2f2f2;
  z-index: 510;

}

.niming text {
  margin-right: 15rpx;
  margin-top: 25rpx;
  font-size: 25rpx;
  color: rgba(0, 0, 0, 0.6);
}

.niming switch {
  padding: 10rpx;
}

.card {
  background: #fff;
  border-radius: 2px;
  display: inline-block;
  height: 300px;
  margin: 1rem;
  position: relative;
  width: 300px;
}

.wxParse-inline{
  display: inline;
  word-break:break-all; 
}
